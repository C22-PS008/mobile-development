<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/imgv_profil"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_leonardo"
                        app:civ_border_width="2dp"
                        app:civ_shadow_radius="10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="10dp"
                        android:layout_gravity="center"
                        android:textSize="12dp"
                        android:textColor="#040F0F"
                        android:text="Halo, Leonardo Yaeger"/>

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_notification"/>

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="20dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp">

                        <ImageView
                            android:layout_width="330dp"
                            android:layout_height="90dp"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="false"
                            android:src="@drawable/img_advertising"
                            />
                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="15dp"
                        android:layout_height="0dp"/>
                    
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp">

                        <ImageView
                            android:layout_width="350dp"
                            android:layout_height="90dp"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="false"
                            android:src="@drawable/img_advertising"
                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                
            </HorizontalScrollView>

            <View
                android:layout_width="0dp"
                android:layout_height="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:text="Pilih Konsultasi mu"
                android:textStyle="bold"/>

            <View
                android:layout_width="0dp"
                android:layout_height="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/pic_karir"/>
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:text="Persiapan Karir"
                        android:gravity="center"
                        android:textStyle="bold"/>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/pic_keuangan"/>
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:text="Keuangan"
                        android:gravity="center"
                        android:textStyle="bold"/>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/pic_kesehatan"/>
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:text="Kesehatan"
                        android:gravity="center"
                        android:textStyle="bold"/>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/pic_hukum"/>
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:text="Hukum"
                        android:gravity="center"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/pic_teknologi"/>
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:text="Teknologi"
                        android:gravity="center"
                        android:textStyle="bold"/>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/pic_bangunan"/>
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:textSize="12sp"
                        android:text="Arsitektur &amp; Bangunan"
                        android:gravity="center"
                        android:textStyle="bold"/>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/pic_hewan"/>
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:text="Hewan"
                        android:gravity="center"
                        android:textStyle="bold"/>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/pic_lainnya"/>
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:text="Lainnya"
                        android:gravity="center"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:text="Rekomendasi Hari Ini"
                android:textStyle="bold"/>

            <View
                android:layout_width="0dp"
                android:layout_height="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:layout_width="165dp"
                        android:layout_height="255dp"
                        android:padding="5dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="134dp"
                            android:layout_height="135dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="false"
                            android:src="@drawable/img_content"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="13dp"
                            android:layout_marginVertical="5dp"
                            android:text="Buku Mind Platter Bejana Pikiran oleh ..."
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#85BDBF"
                            android:layout_marginVertical="5dp"
                            android:textSize="14dp"
                            android:text="Rp100.000"
                            android:textStyle="bold"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:text="+ Tambah"
                            android:textAllCaps="false"
                            android:textSize="13dp"
                            android:textColor="#57737A"
                            android:background="@drawable/bg_btn_add_home" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:layout_width="165dp"
                        android:layout_height="255dp"
                        android:padding="5dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="134dp"
                            android:layout_height="135dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="false"
                            android:src="@drawable/img_content"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="13dp"
                            android:layout_marginVertical="5dp"
                            android:text="Buku Mind Platter Bejana Pikiran oleh ..."
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#85BDBF"
                            android:layout_marginVertical="5dp"
                            android:textSize="14dp"
                            android:text="Rp100.000"
                            android:textStyle="bold"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            android:text="+ Tambah"
                            android:textAllCaps="false"
                            android:textSize="13dp"
                            android:textColor="#57737A"
                            android:background="@drawable/bg_btn_add_home" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</FrameLayout>